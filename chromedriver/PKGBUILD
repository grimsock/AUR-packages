# Maintainer: grimsock <lord.grimsock at gmail dot com>

pkgname=chromedriver
pkgver=2.1
pkgrel=1
pkgdesc="Standalone server which implements WebDriver's wire protocol"
arch=('i686' 'x86_64')
url="http://code.google.com/p/selenium/wiki/ChromeDriver"
license=('Apache')
depends=('chromium>=12.0.712.0' 'libpng12' 'gconf')

if [ "$CARCH" = "i686" ]; then
    _arch='linux32'
    md5sums=('1d7e908253f7240d1596332082cc5742')
elif [ "$CARCH" = "x86_64" ]; then
    _arch='linux64'
    md5sums=('de406b5a1aac2bfb2f419ac01d7231e2')
fi

source=("http://chromedriver.googlecode.com/files/${pkgname}_${_arch}_${pkgver}.zip")

package() {
  mkdir -p "$pkgdir/usr/bin/"
  install -D -m 755 "$srcdir/$pkgname" "$pkgdir/usr/bin/"
}
